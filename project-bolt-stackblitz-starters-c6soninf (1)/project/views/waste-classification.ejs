<%- include('partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4">AI Waste Classification</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Upload Waste Image</h5>
                    <form>
                        <div class="mb-3">
                            <label for="wasteImage" class="form-label">Select an image of the waste</label>
                            <input type="file" class="form-control" id="wasteImage" accept="image/*">
                        </div>
                        <button type="submit" class="btn btn-success">Classify Waste</button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Classification Result</h5>
                    <div id="result" class="mt-3">
                        <p class="text-muted">Upload an image to see the classification result</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>