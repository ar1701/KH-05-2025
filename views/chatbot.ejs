<%- include('partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4">Recycling Awareness Chatbot</h2>
    
    <div class="card">
        <div class="card-body">
            <div class="chat-container" style="height: 400px; overflow-y: auto;">
                <div class="chat-messages" id="chatMessages">
                    <div class="message bot">
                        <p>Hello! I'm your recycling assistant. How can I help you today?</p>
                    </div>
                </div>
            </div>
            
            <form class="mt-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Ask about recycling...">
                    <button class="btn btn-success" type="submit">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>